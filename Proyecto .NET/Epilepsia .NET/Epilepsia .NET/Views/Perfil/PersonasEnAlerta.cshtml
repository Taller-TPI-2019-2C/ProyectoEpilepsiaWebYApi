
@{
    ViewBag.Title = "PersonasEnAlerta";
}

<div class="row justify-content-center">
    <div class="jumbotron col-xl-4 col-lg-4 col-md-6 col-sm-10 col-xs-10 jumbotron-aura">
        <form id="formPersonasEnAlerta" action="~/Perfil/PersonasEnAlerta" method="POST">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label for="email">Ingrese E-mail de su tutor:</label>
                <input id="email" type="email" class="form-control" name="Email" required />
            </div>

            <div class="form-group text-center">
                <input type="submit" value="Env&iacute;ar solicitud" class="btn btn-primary" />
            </div>
        </form>
        <div class="text-center">@ViewBag.ResultadoBusqueda</div>
    </div>
</div>