@{
    ViewBag.Title = "Registro";
    bool form = (ViewBag.Form != null);
}

<div class="row justify-content-center">
    <div class="jumbotron col-xl-4 col-lg-4 col-md-6 col-sm-10 col-xs-10 jumbotron-aura vertical-center justify-content-center">
        <form id="formRegistro" action="~/Home/Registro" method="POST">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label for="nombre">Nombre:</label>
                <input id="nombre" type="text" class="form-control" name="Nombre" @if (form) { <text> value="@ViewBag.Form.Nombre" </text> } required />
            </div>
            <div class="form-group">
                <label for="apellido">Apellido:</label>
                <input id="apellido" type="text" class="form-control" name="Apellido" @if (form) { <text> value="@ViewBag.Form.Apellido" </text> } required />
            </div>
            <div class="form-group">
                <label for="email">E-mail:</label>
                <input id="email" type="email" class="form-control" name="Email" @if (form) { <text> value="@ViewBag.Form.Email" </text> } required />
            </div>
            <div class="form-group">
                <label for="contrasenia">Contraseña:</label>
                <input id="contrasenia" type="password" class="form-control" name="Contrasenia" />
            </div>
            <div class="form-group">
                <label for="fechaNacimiento">Fecha de nacimiento:</label>
                <input id="fechaNacimiento" type="text" class="form-control" @if (form) { <text> value="@ViewBag.Form.fechaNacimiento" </text> } required />
            </div>
            <label>Tipo de cuenta:</label> <!-- Separado del div, en versión mobile no entra todo en una sola fila. Por eso hago esta separación -->
            <div class="form-row">
                <div class="form-group">
                    <input class="ml-2" id="paciente" type="radio" name="Paciente" value="true" checked />
                    <label class="ml-1" for="paciente">Paciente</label>
                </div>
                <div class="form-group">
                    <input class="ml-2" id="nopaciente" type="radio" name="Paciente" value="false" />
                    <label class="ml-1" for="nopaciente">No Paciente</label>
                </div>
            </div>

            <div class="form-group text-center">
                <input type="submit" value="Registrarse" class="btn btn-primary" />
            </div>

            @if (ViewData["MensajeLogin"] != null)
            {
                @ViewData["MensajeLogin"]

            }
        </form>
    </div>
</div>

<script>
    $(function(){
        $("#fechaNacimiento").datepicker();
        $("#formRegistro").validate();
    })
</script>