@model Epilepsia.NET.Models.FormRegistro

@{
    ViewBag.Title = "Registro";
}

<div class="row justify-content-center">
    <div class="jumbotron col-xl-4 col-lg-4 col-md-6 col-sm-10 col-xs-10 jumbotron-aura">
        @using (@Html.BeginForm("Registro", "Home", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            @Html.LabelFor(model => model.Nombre)
            <br />
            @Html.TextBoxFor(model => model.Nombre, new { @placeholder = "Ej: Juan", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
            <br />
            @Html.LabelFor(model => model.Apellido)
            <br />
            @Html.TextBoxFor(model => model.Apellido, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Apellido, "", new { @class = "text-danger" })
            <br />
            @Html.LabelFor(model => model.Email)
            <br />
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            <br />
            @Html.LabelFor(model => model.Contrasenia)
            <br />
            @Html.PasswordFor(model => model.Contrasenia, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Contrasenia, "", new { @class = "text-danger" })
            <br />
            @Html.LabelFor(model => model.Tipo_Paciente)
            <br />
            @Html.DropDownListFor(model => model.Tipo_Paciente,
                         new SelectList(Model.Pacientes, "Value", "Text"), new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Tipo_Paciente, "", new { @class = "text-danger" })
            <br />
            <br />

            <div class="text-center">
                <input type="submit" value="Registrarse" class="btn btn-primary" />
            </div>

            if (ViewData["MensajeLogin"] != null)
            {
                <br />
                <div class="alert alert-danger centermsg" role="alert">
                    @ViewData["MensajeLogin"]
                </div>

            }
        }
    </div>
</div>